<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entire_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="org.firstinspires.ftc.robotcontroller.internal.FtcRobotControllerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#575757">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:text="TextView"
            android:textSize="@dimen/text_size"
            style:layout_constraintStart_toStartOf="parent"
            style:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView0"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView0"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:layout_toEndOf="@+id/textView1"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:layout_toEndOf="@+id/textView4"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:layout_toEndOf="@+id/textView3"
            android:text="TextView"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="@dimen/width"
            android:layout_marginTop="@dimen/high_change"
            android:layout_toEndOf="@+id/textView6"
            android:text="TextView" />

    </RelativeLayout>
</LinearLayout>